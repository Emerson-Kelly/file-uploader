<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= title || "Files" %>
  </title>
  <link href="/stylesheets/output.css" rel="stylesheet" />
</head>

<body>
  <%- include('../partials/navbar') %>

    <div class="-m-1.5 overflow-auto">
      <div class="p-1.5 min-w-full inline-block align-middle">
        <div class="overflow-hidden mt-12">
          <%- include('../partials/subnav', { parentId }) %>

            <!-- Breadcrumb Navigation -->
            <%- include('../partials/breadcrumbs', { breadcrumbs }) %>

                <% if (folder || folder.files) { %>
                  <h1 class="text-2xl font-bold mb-6">üìÅ <%= folder.name %>
                  </h1>

                  <table class="min-w-full divide-y divide-gray-200 border">
                    <thead class="bg-gray-50">
                      <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Size</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
                      </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                      <!-- Subfolders -->
                      <% if (folder && folder.length> 0) { %>
                        <% folder.forEach(sub=> { %>
                          <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                              <a href="/folder/<%= sub.id %>" class="text-blue-600 hover:underline">
                                üìÅ <%= sub.name %>
                              </a>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">Folder</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">‚Äî</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                              <%= new Date(sub.createdAt).toLocaleDateString() %>
                            </td>
                          </tr>
                          <% }) %>
                            <% } %>

                              <!-- Files -->
                              <% if (files && files.length> 0) { %>
                                <% files.forEach(file=> { %>
                                  <tr>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                      <a href="/files/<%= file.id %>" class="text-gray-800 hover:underline">
                                        üìÑ <%= file.name %>
                                      </a>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">File</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                      <% if (file.size < 1024 * 1024) { %>
                                        <%= (file.size / 1024).toFixed(1) %> KB
                                      <% } else { %>
                                        <%= (file.size / (1024 * 1024)).toFixed(1) %> MB
                                      <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                      <%= new Date(file.createdAt).toLocaleDateString() %>
                                    </td>
                                  </tr>
                                  <% }) %>
                                    <% } %>
                    </tbody>
                  </table>

                  <% } else if (folder) { %>
                    <h1 class="text-2xl font-bold mb-4">üìÅ All Folders</h1>
                    <!-- fallback view if not inside a folder -->
                    <% folder.forEach(f=> { %>
                      <p><a href="/folders/<%= f.id %>" class="text-blue-600 hover:underline">üìÅ <%= f.name %></a></p>
                      <% }) %>
                        <% } else { %>
                          <p class="text-gray-500">No data to display.</p>
                          <% } %>

        </div>
      </div>
    </div>
</body>

</html>